<% if (allrecs.length> 0) {%>

  <table border="1">
    <tr>
      <th>watch id</th>
      <th>model</th>
      <th>material</th>
      <th>movement</th>
      <th>complications ID</th>
      <th>size</th>
      <th>price</th>
      <th>status</th>
      <th>manufacturer id</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% allrecs.forEach((recref, index)=> { %>

      <tr>
        <td>
          <%= recref.watch_id %>
        </td>
        <td>
          <%= recref.model %>
        </td>
        <td>
          <%= recref.material %>
        </td>
        <td>
          <%= recref.movement %>
        </td>
        <td>
          <%= recref.complications %>
        </td>
        <td>
          <%= recref.size %>
        </td>
        <td>
          <%= recref.price %>
        </td>
        <td>
          <%= recref.status %>
        </td>
        <td>
          <%= recref.manufacturer_id %>
        </td>
        <td><a href="/watches/<%= recref.watch_id %>/show"> Details</a></td>
        <td><a href="/watches/<%= recref.watch_id %>/edit">Edit</a></td>
        <td>
          <a href="/watches/<%= recref.watch_id %>/delete"

            onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
        </td>
      </tr>
      <% }); %>
  </table>
  <% } 
  else 
  { %>
    <p>Not Records Available</p>
    <% } %>
    
      <p><a href="/watches/addrecord">Add New</a></p>